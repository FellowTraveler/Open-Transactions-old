        var nAcceptedPurses   = accept_from_paymentbox(MyAcct, strIndices, "PURSE")
        // Voucher is already interpreted as a form of cheque, so this is redundant.
//      var nAcceptedVouchers = accept_from_paymentbox(MyAcct, strIndices, "VOUCHER")
        var nAcceptedCheques  = accept_from_paymentbox(MyAcct, strIndices, "CHEQUE")
        // ----------------------------
