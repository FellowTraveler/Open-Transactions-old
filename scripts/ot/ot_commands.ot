def details_del_mail(strMyNymID, strIndices)
{
    // ----------------------------------
    var nCount = OT_API_GetNym_MailCount(strMyNymID)
    
    if (!VerifyIntVal(nCount))
    {
        OT_API_Output(0, "Error: bad result from OT_API_GetNym_MailCount for Nym: " + strMyNymID + "\n")
        return (-1)
    }
    // -------------------------------------------------
    if (0 == nCount)
    {
        OT_API_Output(0, "\n(Mail is empty.)\n\n")
        return 0
    }
    // ----------------------------------------------
    var bIndices   = VerifyStringVal(strIndices)
    var bDeleteAll = false
    
    if (bIndices && ("all" == strIndices))
    {
        bDeleteAll = true
    }
    // ----------------------------------------------
    var nIndicesCount = (bIndices && !bDeleteAll) ? OT_API_NumList_Count(strIndices) : 0
    // --------------------------------------------------------------
    // If we're not deleting ALL, then we must be deleting SPECIFC indices.
    // But no specific indices were supplied!
    // Therefore, error.
    //
    if (!bDeleteAll && (nIndicesCount < 1))
    {
        OT_API_Output(0, "Problem: You're apparently not deleting \"all\" indices, but neither have you selected SPECIFIC indices.\n Try adding: --args \"indices 4,6,7\" (for deleting the messages at indices 4, 6, and 7, for example.)\n\n")
        return (-1)
    }
    // --------------------------------------------------------------
    var nReturnVal = 1

    for (var nIndex = (nCount-1); nIndex >= 0; --nIndex)
    {
        // ----------------------------------------------------------
        // If we're not deleting "all" (i.e. we're deleting specific indices)...
        // and the current index doesn't appear on that specified list, then continue...
        //
        if (!bDeleteAll && !OT_API_NumList_VerifyQuery(strIndices, nIndex.to_string()))
        {
            // We skip any indices that the user isn't trying to delete.
//          continue   // apparently not supported by the language.
        }
        // ----------------------------------------------------------
        // Let's try to remove it...
        //
        else if (OT_API_Nym_RemoveMailByIndex(strMyNymID, nIndex))
        {
            OT_API_Output(0, "Deleted mail at index "+nIndex.to_string()+" for nym: "+strMyNymID+" \n")
        }
        else
        {
            OT_API_Output(0, "Error while trying to delete mail at index "+nIndex.to_string()+" for nym: "+strMyNymID+" \n")
            nReturnVal = (-1)
        }
    } // for
    // --------------------------------------------------------------
    return nReturnVal
}



 
