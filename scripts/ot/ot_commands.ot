def details_show_record(strServerID, strMyNymID, strMyAcctID, nIndex, strRecordBox)
{
    if (!VerifyStringVal(strRecordBox))
    {
        OT_API_Output(0, "\n\n details_show_record: strRecordBox is empty.\n(Need to load it first before calling this function.)\n\n")
        return false
    }
    // -----------------------------------------------------------------
    // Success!
    //
    var strTrans           = OT_API_Ledger_GetTransactionByIndex(strServerID, strMyNymID, strMyAcctID, strRecordBox, nIndex)
    var lTransID           = OT_API_Ledger_GetTransactionIDByIndex(strServerID, strMyNymID, strMyAcctID, strRecordBox, nIndex)
    var lRefNum            = OT_API_Transaction_GetDisplayReferenceToNum(strServerID, strMyNymID, strMyAcctID, strTrans)
    var lAmount            = OT_API_Transaction_GetAmount(strServerID, strMyNymID, strMyAcctID, strTrans)
    var strType            = OT_API_Transaction_GetType(strServerID, strMyNymID, strMyAcctID, strTrans)
    var strSenderUserID    = OT_API_Transaction_GetSenderUserID(strServerID, strMyNymID, strMyAcctID, strTrans)
    var strSenderAcctID    = OT_API_Transaction_GetSenderAcctID(strServerID, strMyNymID, strMyAcctID, strTrans)
    var strRecipientUserID = OT_API_Transaction_GetRecipientUserID(strServerID, strMyNymID, strMyAcctID, strTrans)
    var strRecipientAcctID = OT_API_Transaction_GetRecipientAcctID(strServerID, strMyNymID, strMyAcctID, strTrans)
    
    var strUserID = VerifyStringVal(strSenderUserID) ? strSenderUserID : strRecipientUserID;
    var strAcctID = VerifyStringVal(strSenderAcctID) ? strSenderAcctID : strRecipientAcctID;
    
    var bUserIDExists = VerifyStringVal(strUserID)
    var bAcctIDExists = VerifyStringVal(strAcctID)
    
    var strNewlineSeparator = ""
    
    if (bUserIDExists || bAcctIDExists)
    {  strNewlineSeparator = "\n                                 |" }
    
    var strSeparator = (!bUserIDExists && !bAcctIDExists) ? "" : strNewlineSeparator;
    
    var strUserDenoter = (bUserIDExists ? "U:" : "")
    var strAcctDenoter = (bAcctIDExists ? "A:" : "")
    
    var strAmount = VerifyIntVal(lAmount) ? lAmount.to_string() : "UNKNOWN_AMOUNT"
    
    OT_API_Output(0, nIndex.to_string() + "    ")
    OT_API_Output(0, strAmount + (strAmount.size() < 3 ? "    " : "   "))
    OT_API_Output(0, strType)
    OT_API_Output(0, strType.size() > 10 ? " " : "    ")
    OT_API_Output(0, lTransID.to_string() + (lTransID.to_string().size() < 2 ? "    " : "   "))
    OT_API_Output(0, lRefNum.to_string() + (lRefNum.to_string().size() > 2 ? "  " : " ") + "|")
    OT_API_Output(0, strUserDenoter+strUserID + strSeparator + strAcctDenoter+strAcctID + "\n")

    return true
}



