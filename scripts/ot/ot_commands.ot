//
def main_accept_all()
{
    var strUsage = "\nUsage:  acceptall --myacct INTO_ACCT\n"
    
    OT_API_Output(0, strUsage)
    // --------------------------------------------------------------------
    if (VerifyExists("MyAcct"))
    {
        var strIndices = ""
